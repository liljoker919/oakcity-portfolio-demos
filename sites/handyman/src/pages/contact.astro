---
import Layout from '@shared/components/Layout.astro';
import '@shared/styles/global.css';
import '../styles/custom.css';
import { siteConfig } from '../config/siteConfig';
---

<Layout 
  title={`Contact Us - ${siteConfig.siteName}`}
  description={`Get in touch with ${siteConfig.siteName} for a free estimate or to schedule your repair service`}
  {...siteConfig}
>
  <div class="hero">
    <div class="content-container">
      <h1>Contact Us</h1>
      <p>Get a free estimate or schedule your repair service today</p>
    </div>
  </div>

  <section class="section">
    <div class="content-container">
      <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 3rem; align-items: start;">
        <div>
          <h2 style="text-align: left; margin-bottom: 1.5rem;">Get In Touch</h2>
          <div class="card">
            <h3>üìû Phone</h3>
            <p style="font-size: 1.1rem; margin-bottom: 1.5rem;">
              <a href={`tel:${siteConfig.contactPhone.replace(/\D/g, '')}`} style="color: #3498db; text-decoration: none;">{siteConfig.contactPhone}</a>
            </p>
            
            <h3>üìß Email</h3>
            <p style="font-size: 1.1rem; margin-bottom: 1.5rem;">
              <a href={`mailto:${siteConfig.contactEmail}`} style="color: #3498db; text-decoration: none;">{siteConfig.contactEmail}</a>
            </p>
            
            <h3>üìç Service Area</h3>
            <p style="font-size: 1.1rem; margin-bottom: 1.5rem;">
              {siteConfig.serviceArea}
            </p>
            
            <h3>üïê Business Hours</h3>
            <p style="font-size: 1.1rem;">
              Monday - Friday: 8:00 AM - 6:00 PM<br>
              Saturday: 9:00 AM - 4:00 PM<br>
              Sunday: Closed
            </p>
          </div>
        </div>

        <div>
          <h2 style="text-align: left; margin-bottom: 1.5rem;">Request a Quote</h2>
          <!-- Note: This is a demo form. In production, configure the action attribute 
               to use a form handling service like Netlify Forms, Formspree, or AWS API Gateway -->
          <form class="card" action="#" onsubmit="event.preventDefault(); alert('This is a demo form. Configure a form handler for production use.');">
            <div class="form-group">
              <label for="name">Full Name *</label>
              <input type="text" id="name" name="name" required />
            </div>

            <div class="form-group">
              <label for="email">Email Address *</label>
              <input type="email" id="email" name="email" required />
            </div>

            <div class="form-group">
              <label for="phone">Phone Number *</label>
              <input type="tel" id="phone" name="phone" required />
            </div>

            <div class="form-group">
              <label for="service">Service Type *</label>
              <select id="service" name="service" required>
                <option value="">Select a service...</option>
                <option value="plumbing">Plumbing Repairs</option>
                <option value="electrical">Electrical Work</option>
                <option value="drywall">Drywall & Painting</option>
                <option value="carpentry">Carpentry</option>
                <option value="installation">Installation Services</option>
                <option value="general">General Repairs</option>
                <option value="other">Other</option>
              </select>
            </div>

            <div class="form-group">
              <label for="message">Tell us about your project *</label>
              <textarea id="message" name="message" required placeholder="Please describe the repair or improvement needed, any relevant details, and your preferred schedule..."></textarea>
            </div>

            <button type="submit" class="btn" style="width: 100%;">Submit Request</button>

            <p style="font-size: 0.9rem; color: #666; margin-top: 1rem; text-align: center;">
              We'll respond to your inquiry within 24 hours during business days.
            </p>
          </form>
        </div>
      </div>
    </div>
  </section>

  <section class="section section-alt">
    <div class="content-container">
      <h2>Why Choose {siteConfig.siteName}?</h2>
      <div class="grid" style="grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));">
        <div class="card">
          <h3>‚úÖ Free Estimates</h3>
          <p>No obligation, transparent pricing for all our services.</p>
        </div>
        <div class="card">
          <h3>‚úÖ Flexible Scheduling</h3>
          <p>We work around your schedule, including evenings and weekends.</p>
        </div>
        <div class="card">
          <h3>‚úÖ Satisfaction Guaranteed</h3>
          <p>If you're not happy, we'll make it right‚Äîno questions asked.</p>
        </div>
        <div class="card">
          <h3>‚úÖ Licensed & Insured</h3>
          <p>Fully licensed and insured for your peace of mind.</p>
        </div>
      </div>
    </div>
  </section>

  <section class="section">
    <div class="content-container">
      <div style="max-width: 700px; margin: 0 auto; text-align: center;">
        <h2>Frequently Asked Questions</h2>
        
        <div class="card" style="text-align: left; margin-bottom: 1rem;">
          <h3>Do I need to be home during the repair?</h3>
          <p>It depends on the project. For most repairs, we prefer that someone is home to provide access and answer questions, but we can also work with a key or access code if needed.</p>
        </div>
        
        <div class="card" style="text-align: left; margin-bottom: 1rem;">
          <h3>How do you provide estimates?</h3>
          <p>We offer free estimates for most projects. Depending on the scope, we can provide a quote over the phone or schedule a visit to assess the work needed.</p>
        </div>
        
        <div class="card" style="text-align: left; margin-bottom: 1rem;">
          <h3>Are you licensed and insured?</h3>
          <p>Yes! We are fully licensed and insured for your protection and peace of mind. We carry both liability and workers' compensation insurance.</p>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  @media (max-width: 768px) {
    section .content-container > div[style*="grid-template-columns"] {
      grid-template-columns: 1fr !important;
    }
  }
</style>
